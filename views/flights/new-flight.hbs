<div class="create" id="create">
<h2>Agregar vuelo</h2>

    <form action="/flights/create" method="POST">
    <label for="date">Fecha</label>
    <input type="date" name="date" />
    <label for="time">Hora de salida</label>
    <input type="time" name="time"/>
    <label for="from">De:</label>
    <select name="from">
      {{#each airports}}
        <option value="{{_id}}">{{codeOACI}} ({{name}})</option>
      {{/each}}
    </select>

    <label for="to">A:</label>
    <select name="to">
      {{#each airports}}
        <option value="{{_id}}">{{codeOACI}} ({{name}})</option>
      {{/each}}
    </select>
    <label for="kind">Tipo de vuelo</label>
    <select name="kind">
        <option value="LOCAL">LOCAL</option>
        <option value="RUTA">RUTA</option>
        <option value="TOQUES Y DESPEGUES">TOQUES Y DESPEGUES</option>
    </select>
    <label for="plate">Matrícula</label>
    <input type="text" name="plate"/>
    <label for="model">Modelo del avión</label>
    <input type="text" name="model"/>
    <label for="timeH">Tiempo de vuelo (Horas)</label>
    <input type="number" name="timeH"/>
    <label for="timeM">Tiempo de vuelo (Minutos)</label>
    <input type="number" name="timeM"/>
    <label for="plus">Condiciones:</label>
    <select name="plus">
        <option value="VFR">VFR</option>
        <option value="IFR">IFR</option>
        <option value="Nocturno">Nocturno</option>
    </select>  
    <button class="submit" type="submit">Crear vuelo</button>

</form>

    <button class="submit"><a href="/flights">Regresar</a></button>
</div>