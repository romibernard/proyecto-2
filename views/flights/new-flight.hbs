<div class="create" id="create">
<h2>Agregar vuelo</h2>
<ul id="list-new">
    <form action="/flights/create" method="POST">
    <li><label for="date">Fecha</label>
    <input type="date" name="date" /></li>
    <li><label for="time">Hora de salida</label>
    <input type="time" name="time"/></li>
    <li><label for="from">De:</label>
    <select name="from">
      {{#each airports}}
        <option value="{{_id}}">{{codeOACI}} ({{name}})</option>
      {{/each}}
    </select></li>

    <li><label for="to">A:</label>
    <select name="to">
      {{#each airports}}
        <option value="{{_id}}">{{codeOACI}} ({{name}})</option>
      {{/each}}
    </select></li>
    <li><label for="kind">Tipo de vuelo</label>
    <select name="kind">
        <option value="LOCAL">LOCAL</option>
        <option value="RUTA">RUTA</option>
        <option value="TOQUES Y DESPEGUES">TOQUES Y DESPEGUES</option>
    </select></li>
    <li><label for="plate">Matrícula</label>
    <input type="text" name="plate"/></li>
    <li><label for="model">Modelo del avión</label>
    <input type="text" name="model"/></li>
    <li><label for="timeH">Tiempo de vuelo (Horas)</label>
    <input type="number" name="timeH"/></li>
    <li><label for="timeM">Tiempo de vuelo (Minutos)</label>
    <input type="number" name="timeM"/></li>
    <li><label for="plus">Condiciones:</label>
    <select name="plus">
        <option value="VFR">VFR</option>
        <option value="IFR">IFR</option>
        <option value="Nocturno">Nocturno</option>
    </select></li>
    </br>
    <button class="submit" id="btn-create" type="submit">Crear vuelo</button>
<br>
</form>
</ul>
    <button class="submit" id="btn-return"><a href="/user/flights">Regresar</a></button>
</div>